# Konfigurasi Botopia

# Database
BOTOPIA_DB_PATH=botopia.db
BOTOPIA_DB_BACKUP=true

# Bot
BOTOPIA_COMMAND_PREFIX=!

# Web Server
BOTOPIA_WEB_PORT=8080
BOTOPIA_WEB_HOST=0.0.0.0
BOTOPIA_AUTH_ENABLED=false
BOTOPIA_AUTH_USERNAME=admin
BOTOPIA_AUTH_PASSWORD=admin

# Aplikasi
BOTOPIA_DEV_MODE=true
BOTOPIA_CLEAN_START=false
BOTOPIA_QR_AUTO_REFRESH=true

# Logging
BOTOPIA_LOG_LEVEL=INFO
BOTOPIA_USE_COLORS=true

# Google API (Service Account)
# Path ke file kredensial Service Account JSON
BOTOPIA_GOOGLE_CREDENTIALS=./service-account.json
# ID Google Spreadsheet (dari URL)
BOTOPIA_SPREADSHEET_ID=
# ID folder Google Drive untuk menyimpan bukti (opsional)
BOTOPIA_DRIVE_FOLDER=
